<?xml version="1.0" encoding="UTF-8"?>
<Atlas_IoTDDL>
	<Atlas_Thing>
		<Descriptive_Metadata>
			<Thing_ATID>raspy-h</Thing_ATID>
			<Thing_Name>Humi</Thing_Name>
			<Thing_Owner>Lihuen</Thing_Owner>
			<Thing_Vendor>Raspberry Pi Foundation</Thing_Vendor>
			<Thing_Model>Raspberry Pi 4</Thing_Model>
			<Thing_ReleaseDate>8/2020</Thing_ReleaseDate>
			<Thing_Type>Thing of Things</Thing_Type>
			<Thing_OperatingSystem>Raspbian</Thing_OperatingSystem>
			<Thing_ShortDescription></Thing_ShortDescription>
			<LongDescription>Humidity sensor connected to a Raspberry Pi to monitor environmental humidity levels.</LongDescription>
			<Thing_SSID>MySmartSpace</Thing_SSID>
			<Space_Coordinates></Space_Coordinates>
			<Space_Name>Living Room</Space_Name>
			<Space_Description>A smart space in my home where environmental factors like humidity are monitored.</Space_Description>
			<Space_Constraints>
				<Temperature>
					<Lower_Bound></Lower_Bound>
					<Upper_Bound></Upper_Bound>
				</Temperature>
				<Humidity>
					<Lower_Bound>10</Lower_Bound>
					<Upper_Bound>60</Upper_Bound>
				</Humidity>
				<Voltage>
					<Lower_Bound></Lower_Bound>
					<Upper_Bound></Upper_Bound>
				</Voltage>
				<Radio_Interference_Radius></Radio_Interference_Radius>
				<Safe_Temperature_Radius></Safe_Temperature_Radius>
			</Space_Constraints>
		</Descriptive_Metadata>
		<Administrative_Metadata>
			<Network_Manager>
				<Module>UDP</Module>
				<Type>UDP</Type>
				<Network_Name>MySpaceNetwork</Network_Name>
				<Network_Passcode>MySpaceNetwork</Network_Passcode>
				<MulticastGroup>
					<IP>232.1.1.1</IP>
					<Port>5062</Port>
				</MulticastGroup>
				<Communication_Protocol>UDP</Communication_Protocol>
				<Network_Configuration>
					<Default_Port>5062</Default_Port>
					<Default_IP>0.0.0.0</Default_IP>
					<Default_Protocol>UDP</Default_Protocol>
				</Network_Configuration>
				<InterOperableCommunication>
					<Broker>
						<Vendor>HiveMQ</Vendor>
						<Dashboard>http://www.mqtt-dashboard.com/</Dashboard>
						<IP>broker.hivemq.com</IP>
						<Port>1883</Port>
					</Broker>
					<Topic>
						<Root>/Atlas</Root>
						<Network_MQTTClient>/Network/MQTT_Client</Network_MQTTClient>
						<Network_PrivateBroker>/Network/Private_Broker</Network_PrivateBroker>
						<Multicast_ThingIdentity>/Multicast/Tweet_ThingIdentity</Multicast_ThingIdentity>
						<Multicast_EntityIdentity>/Multicast/Tweet_EntityIdentity</Multicast_EntityIdentity>
						<Multicast_API>/Multicast/API</Multicast_API>
						<Unicast>/Unicast/Interaction</Unicast>
					</Topic>
				</InterOperableCommunication>
				<OMA_DM>
					<AccessName>Eclipse Leshan</AccessName>
					<IP>coap://leshan.eclipseprojects.io</IP>
					<Port>5683</Port>
				</OMA_DM>
			</Network_Manager>
			<Memory_Manager>
				<Store_Format></Store_Format>
				<MemoryUnit_Application></MemoryUnit_Application>
				<MemoryUnit_Knowledge></MemoryUnit_Knowledge>
			</Memory_Manager>
		</Administrative_Metadata>
		<Thing_Attachment>
			<Service>
				<Service_Name>Humidity_Service</Service_Name>
				<Service_Type>Sensor</Service_Type>
				<Service_Port>5062</Service_Port>
				<Service_Protocol>UDP</Service_Protocol>
				<Service_IP>0.0.0.0</Service_IP>
				<Service_Configuration>
					<Listen_Port>5062</Listen_Port>
					<Broadcast_Port>5062</Broadcast_Port>
				</Service_Configuration>
			</Service>
			<Service>
				<Service_Name>LED_Control_Service</Service_Name>
				<Service_Type>Actuator</Service_Type>
				<Service_Port>5063</Service_Port>
				<Service_Protocol>UDP</Service_Protocol>
				<Service_IP>0.0.0.0</Service_IP>
				<Service_Configuration>
					<Listen_Port>5063</Listen_Port>
					<Command_Port>5063</Command_Port>
				</Service_Configuration>
			</Service>
		</Thing_Attachment>
		<Structural_Metadata>
			<Number_Hardware>0</Number_Hardware>
			<Number_Software>0</Number_Software>
			<Number_Hybrid>0</Number_Hybrid>
			<Number_Entities>0</Number_Entities>
		</Structural_Metadata>
		
		<Entities>
		  <Entity>
			<Entity_ID>SmartHumiditySystem</Entity_ID>
			<Entity_Name>SmartHumiditySystem</Entity_Name>
			<Entity_Type>Hybrid</Entity_Type>
			<Entity_SensorActuator>SensorActuator</Entity_SensorActuator>
			<Entity_Description>Combined humidity sensor and LED controller</Entity_Description>
			
			<Services>
			  <Service>
				<Service_Name>Read_Humidity</Service_Name>
				<Libraries>
				  <Library>#include "mcp3008.h"</Library>
				</Libraries>
				<ADC>
				  <ADC_Model>MCP3008</ADC_Model>
				  <ADC_Channel>0</ADC_Channel>
				  <ADC_ResultVar>value</ADC_ResultVar>
				</ADC>
				<Service_Output>
				  <Output>
					<Type>int</Type>
					<Name>value</Name>
				  </Output>
				</Service_Output>
				<Functionality>
				  value = mcpRead0();
				</Functionality>
			  </Service>
			  <Service>
				<Service_Name>Monitor_Humidity</Service_Name>
				<Service_Description>Listens for humidity broadcasts and controls LED accordingly</Service_Description>
				<Service_Input>
				  <Input>
					<Type>json</Type>
					<Name>humidity_message</Name>
					<Format>{"type": "humidity", "value": humidity_value}</Format>
				  </Input>
				</Service_Input>
			  </Service>
			  <Service>
				<Service_Name>Manual_Control</Service_Name>
				<Service_Description>Accepts manual commands to control LED state</Service_Description>
				<Service_Input>
				  <Input>
					<Type>json</Type>
					<Name>command_message</Name>
					<Format>{"type": "command", "value": "on|off"}</Format>
				  </Input>
				</Service_Input>
			  </Service>
			</Services>
		  </Entity>
		</Entities>
		
		
    

	</Atlas_Thing>
</Atlas_IoTDDL>